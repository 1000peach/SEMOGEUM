    <!-- 중간: 꿀떡꿀떡 넘어가는 리뷰-->
    <div class="container">
        <!-- 꿀떡꿀떡 넘어가는 리뷰 전체를 묶는 div -->
        <h4 class="font-weight-bold mt-4 mb-0">꿀떡꿀떡 넘어가는 리뷰</h4>
        <hr class="mt-2 mb-3" />
        <% for (var i = 0; i < 3; i++) { %> 
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-3" style="border: none;">
                    <!-- 한 줄에 리뷰 2개 표시 (사진 2개, 텍스트 2개) mb는 margin bottom -->
                    <div class="row no-gutters">
                        <div class="col-6">
                            <% if (sellProducts[i * 2] !== undefined) { %>
                            <a href="/mogeum-detail/3/<%= sellProducts[i * 2].productNum %>">
                                <img src="<%= sellProducts[i * 2].thumbnailImg %>" alt="" class="card-img" /> <!-- thumbnailImg -->
                            </a>
                            <% } %>
                        </div>
                        <div class="col-6">
                            <div class="card-body">
                                <% if (sellProducts[i * 2] !== undefined) { %>
                                <p class="review-title"><%= sellProducts[i * 2].productName %></p> <!-- productName -->
                                <% } %>
                                <div>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star"></span>
                                    <span class="review-rank fa fa-star"></span>
                                </div>
                                <div style="height: 60%;">
                                    <% if (sellProducts[i * 2] !== undefined) { %>
                                    <p class="review-content"><%= reviews[i * 2].Contents %></p> <!-- productIntro -->
                                    <% } %>
                                    <p class="customer-ID">- <%= reviews[i * 2].userName %></p> <!-- userName -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-3" style="border: none;">
                    <div class="row no-gutters">
                        <div class="col-6">
                            <% if (sellProducts[i * 2 + 1] !== undefined) { %>
                            <a href="/mogeum-detail/3/<%= sellProducts[i * 2 + 1].productNum %>">
                                <img src="<%= sellProducts[i * 2 + 1].thumbnailImg %>" alt="" class="card-img" /> <!-- thumbnailImg -->
                            </a>
                            <% } %>
                        </div>
                        <div class="col-6">
                            <div class="card-body">
                                <% if (sellProducts[i * 2 + 1] !== undefined) { %>
                                <p class="review-title"><%= sellProducts[i * 2 + 1].productName %></p> 
                                <% } %>
                                <div>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star checked"></span>
                                    <span class="review-rank fa fa-star"></span>
                                    <span class="review-rank fa fa-star"></span>
                                </div>
                                <% if (sellProducts[i * 2 + 1] !== undefined) { %>
                                <p class="review-content"><%= reviews[i * 2 + 1].Contents %></p>
                                <% } %>
                                <p class="customer-ID">- <%= reviews[i * 2 + 1].userName %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
