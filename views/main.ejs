    <!-- 중간: 꿀떡꿀떡 넘어가는 리뷰-->
    <div class="container">
        <!-- 꿀떡꿀떡 넘어가는 리뷰 전체를 묶는 div -->
        <h4 class="font-weight-bold mt-4 mb-0">꿀떡꿀떡 넘어가는 리뷰</h4>
        <hr class="mt-2" />
        <div class="projects-horizontal">
            <div class="container">
                <div class="row projects">
                    <% for (var i = 0; i < 6; i++) { %> <% if (reviews[i] !== undefined) { %>
                    <div class="review-article col-lg-6 col-md-4 col-6 item">
                        <a href="/mogeum-detail/3/<%= reviews[i].productNum %>" class="text-black">
                            <div class="row">
                                <div class="review-div col-md-12 col-lg-5">
                                    <img class="img-fluid" src="<%= reviews[i].thumbnailImg %>" />
                                </div>
                                <div class="col">
                                    <h6 class="font-weight-bold mb-2"><%= reviews[i].productName %></h6>
                                    <p class="description">
                                        평점: <% for (var j = 0; j < 5; j++) { %> <% if (j < reviews[i].star) { %>
                                        <span class="fa fa-star checked"></span>
                                        <% } else { %> <span class="fa fa-star"></span> <% } %> <% } %><br /><%= reviews[i].Contents %>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% } %> <% } %>
                </div>
            </div>
            <h4 class="font-weight-bold mt-4 mb-0">세모금과 함께 합니다</h4>
            <hr class="mt-2 mb-3" />
        </div>
    </div>
