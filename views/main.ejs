<!-- 상단 carousel : 상품 추천. 클릭 시 상품 상세 페이지 이동-->
<div id="main-div" class="col-div" style="width: 100%; z-index: 1;">
    <button type="button" id="top" style="width: 60px; height: 60px;">
        <img src="/images/top.png" width="30" height="30" alt="scroll top" />
    </button>
    <div id="main-carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#main-carousel" data-slide-to="1"></li>
            <li data-target="#main-carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div id="first-carousel" class="top-carousel d-block" style="width: 100%; height: 250px;">
                    <h3 class="font-weight-bold text-right">
                        어느 날 <mark style="color: white;">화분</mark>이 <br />내게 말을 걸어왔다 ··· <br /><font size="6">"물 안 주면 삐뚤어질테다!"</font>
                    </h3>
                </div>
            </div>
            <div class="carousel-item">
                <div id="second-carousel" class="top-carousel d-block" style="width: 100%; height: 250px;">
                    <h3 class="font-weight-bold text-right">
                        <font size="6"><strong>마!</strong></font> <br /> 요즘 누가 귀찮구로 쓰까묵노! <br /> 쏘맥, 아샷추? <br /> 그거 <mark style="color: white;">한 번에 무라!</mark> 
                    </h3>
                </div>
            </div>
            <div class="carousel-item">
                <div id="third-carousel" class="top-carousel d-block" style="width: 100%; height: 250px;">
                    <h3 class="font-weight-bold text-right">
                        이거 안 사면 <strong>바보</strong>셈 <br />
                        방수신발 <strong>봐보</strong>셈 <br />
                        신으면 <mark style="color: white;">물 . 안 . 샘</mark>
                    </h3>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#main-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#main-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- 이벤트 기간 공지 -->
    <ol>
        <li class="notice-li text-center">
            <b class="d-day text-danger bg-white">D-4</b>
            <a href="/mogeum/1" class="text-white">6월의 상품 투표 (2020.04.20~2020.04.26)</a>
        </li>
        <li class="notice-li text-center">
            <b class="d-day text-danger bg-white">D-7</b>
            <a href="/products/prodContest" class="text-white">7월의 상품 공모 (2020.04.20~2020.05.03)</a>
        </li>
    </ol>
    <!-- 중간: 이런 상품도 있어요 -->
    <div class="container">
        <!-- 한 모금 -->
        <h4 class="font-weight-bold mt-4 mb-0">이런 상품도 있어요</h4>
        <hr class="mt-2 mb-3" />
        <div class="row text-center text-lg-left">
            <div class="col-lg-3 col-md-4 col-6">
                <a href="#" class="d-block mb-4 h-100">
                    <div class="col-div" style="border: none;">
                        <p class="product-title text-white text-left font-weight-bold">한 모금,</p>
                        <div class="mogeum" style="padding: 10px;">
                            <p class="product-name text-center font-weight-bold">5월의 상품</p>
                            <br />
                            <p class="text-left product-name"><img src="/images/price-tag.png" width="30" height="30" />&nbsp;상품 <%= prodNameCount.cnt %>개</p>
                            <p class="text-left product-name"><img src="/images/like2.png" width="30" height="30" />&nbsp;투표 <%= voteCountSum.sum %>개</p>
                        </div>
                    </div>
                </a>
            </div>
            <% for (var i = 0; i < 3; i++) { %>
                <div class="col-lg-3 col-md-4 col-6">
                        <% if (thumbnailImg[i] !== undefined) { %>
                            <a href="/mogeum-detail/1/<%= productNum[i].productNum %>" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" src="<%= Object.values(thumbnailImg[i])[0] %>" alt="한 모금 상품" style="border: none; padding: 0;" />
                        <% } else { %>
                            <a href="#" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" src="/images/catPaw.PNG" alt="기본 이미지" style="border: none; padding: 0;" />
                        <% } %>
                    </a>
                </div>
            <% } %>
            <!-- 두 모금 -->
            <div class="col-lg-3 col-md-4 col-6">
                <a href="#" class="d-block mb-4 h-100">
                    <div class="col-div" style="border: none;">
                        <p class="product-title text-white text-left font-weight-bold">두 모금,</p>
                        <div class="mogeum" style="padding: 10px;">
                            <p class="product-name text-center font-weight-bold">5월 선정작 상품화 진행</p>
                            <br />
                            <% if (prodNameCount !== undefined) { %>
                            <p class="text-left product-name"><img src="/images/like2.png" width="30" height="30" />&nbsp;상품 <%= prodNameCount.cnt %>개</p>
                            <% } %>
                        </div>
                    </div>
                </a>
            </div>
            <% for (var i = 0; i < 3; i++) { %>
                <div class="col-lg-3 col-md-4 col-6">
                        <% if (thumbnailImg[i] !== undefined) { %>
                            <a href="/mogeum-detail/1/<%= rankInfo[i].productNum %>" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" src="<%= Object.values(rankInfo)[i].thumbnailImg %>" alt="두 모금 상품" style="border: none; padding: 0;" />
                        <% } else { %>
                            <a href="#" class="d-block mb-4 h-100">
                            <img class="img-fluid img-thumbnail" src="/images/catPaw.PNG" alt="기본 이미지" style="border: none; padding: 0;" />
                        <% } %>
                    </a>
                </div>
            <% } %>
            <!-- 세 모금 -->
            <div class="col-lg-3 col-md-4 col-6">
                <a href="#" class="d-block mb-4 h-100">
                    <div class="col-div" style="border: none;">
                        <p class="product-title text-white text-left font-weight-bold">세 모금,</p>
                        <div class="mogeum" style="padding: 10px;">
                            <p class="product-name text-center font-weight-bold">판매중인 상품</p>
                            <br />
                            <% if (sellProductCntSum !== undefined) { %>
                            <p class="text-left product-name"><img src="/images/like2.png" width="30" height="30" />&nbsp;상품 <%= sellProductCntSum[0].cnt %>개</p>
                            <% } %>
                        </div>
                    </div>
                </a>
            </div>
            <% for (var i = 0; i < 3; i++) { %>
            <div class="col-lg-3 col-md-4 col-6">
                <a href="/mogeum-detail/3/<%= sellProducts[i].productNum %>" class="d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src="<%= sellProducts[i].thumbnailImg %>" alt="" style="border: none; padding: 0;" />
                </a>
            </div>
            <% } %>
        </div>
    </div>
