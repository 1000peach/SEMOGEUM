<body id="register-body" class="form-v7">
    <div class="page-content">
        <div class="form-v7-content">
            <div class="form-left">
                <div class="thumbnail-wrapper">
                    <a href="/">
                        <img id="big-logo" src="/images/signup.jpg" class="text-center" alt="세모금 메인" usemap="#signup-map" />
                    </a>
                </div>
            </div>
            <form class="form-detail" action="/users/signUp" method="POST" id="myform">
                <a href="/"><img id="mini-logo" src="/images/icon.png" alt="세모금 로고" /></a>
                <div class="form-row">
                    <label for="username">아이디</label>
                    <input type="text" name="userId" class="input-text" required />
                </div>
                <div class="form-row">
                    <label for="userName">이름</label>
                    <input type="text" name="userName" class="input-text" required />
                </div>
                <div class="form-row">
                    <label for="your_email">이메일</label>
                    <input type="email" name="userEmail" class="input-text" required />
                </div>
                <div class="form-row">
                    <label for="your_phone">휴대폰 번호</label>
                    <input type="text" name="userPhone" class="input-text" placeholder="ex. 01012345678" required />
                </div>
                <div class="form-row">
                    <label for="password">비밀번호</label>
                    <input type="password" name="userPwd" class="input-text" required />
                </div>
                <div class="form-row">
                    <label for="comfirm_password">비밀번호 확인</label>
                    <input type="password" name="userPwdConfirm" class="input-text" required />
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="회원가입" />
                    <p>또는<a href="/users/login">로그인</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
